# cd
alias ..="cd .."
alias ...="cd ../.."

# ls
alias ls="ls -FG"
alias ll="ls -lG"
alias la="ls -AG"
alias l="ls -lAhG"

# rails
alias rss="rails server"
alias rsc="rails console"
alias rsg="rails generate"
alias rsl="tail -f log/development.log"
alias rst="touch tmp/restart.txt"
alias rdb="rake db:migrate db:test:clone"
alias rrs="rake routes"

# bundler
alias bex="bundle exec"

# databases
alias pgs="pg_ctl -D /usr/local/var/postgres"
alias mys="$(brew --prefix percona-server)/share/mysql/mysql.server"

# hidden files in Finder
alias show="defaults write com.apple.Finder AppleShowAllFiles -bool true && killall Finder"
alias hide="defaults write com.apple.Finder AppleShowAllFiles -bool false && killall Finder"
