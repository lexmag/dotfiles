[user]
  name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
  email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[core]
  excludesfile = <%= ENV['HOME'] %>/.gitignore
  editor = subl -n -w
[pull]
  rebase = true
[push]
  default = current
[alias]
  flog = log --oneline --abbrev-commit --all --graph --decorate --color
  peek = !git flog | head -5
  fall = fetch --all --prune
  hreset = reset --hard
  mark = !git tag -f $1 && git push -f origin
  fixup = !git add -A . && git commit --amend --no-edit
