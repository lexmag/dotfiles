[user]
  name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
  email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[core]
  excludesfile = <%= ENV['HOME'] %>/.gitignore
  editor = subl -n -w
[pull]
  rebase = true
[push]
  default = current
[rebase]
  autosquash = true
  autostash = true
[status]
  showUntrackedFiles = all
[alias]
  flog = log --oneline --abbrev-commit --graph --decorate --color
  fpush = push --force-with-lease
  peek = !git flog | head -5
  fall = fetch --all --prune
  wip = !git add --all . && git commit --message WIP
  hreset = reset --hard
  mark = !git tag --force $1 && git push --force origin
  reword = commit --amend
  fixup = !git add --all . && git reword --no-edit
